<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>

		<h2><%= page %> Estoque</h2>

	</div>		<!-- .block_head ends -->

	<div class="block_content">

		<p class="breadcrumb"><a href="<%= stocks_url %>">Estoque</a> &raquo; <strong><%= page %></strong></p>

		<%= form_for(@stock)  do |f| %>
		  <% if @stock.errors.any? %>
		    <div class="message errormsg">
		      <p>Não foi possível salvar devido aos seguintes erros:</p>

		      <% @stock.errors.full_messages.each do |msg| %>
		        <p><%= msg %></p>
		      <% end %>
		    </div>
		  <% end %>
  <p>
    <%= f.label :Placa %><br />
    <%= f.text_field :license_plate %>
  </p>
  <p>
    <%= f.label :nome_motorista %><br />
    <%= f.text_field :license_name %>
  </p>
  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :quantidade %><br />
    <%= f.text_field :qtd %>
  </p>
  <p>
    <%= f.label :preco_unitario %><br />
    <%= f.text_field :price_unit %>
  </p>
  <p>
    <%= f.label :complemento %><br />
    <%= f.text_field :complement %>
  </p>
  <p>
    <%= f.label :observacao %><br />
    <%= f.text_area :observation %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date, :order => [:day, :month, :year]%>
  </p>
  <p>
	<%= f.label :status %><br />
	<%= f.select :status, ["aberto", "fechado"], :prompt => "Selecione", :class => "styled" %>
  </p>
  <p>
    <%= f.submit page, :class => "submit small" %>
  </p>
<% end %>

	</div>		<!-- .block_content ends -->

	<div class="bendl"></div>
	<div class="bendr"></div>

</div>		<!-- .block ends -->
