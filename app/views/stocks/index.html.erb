
<div class="block">

	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2>Estoque</h2>
		
		<ul>
			<li><a href="<%=new_stock_path%>">Novo item</a></li>
		</ul>
	</div>		<!-- .block_head ends -->
	
	<div class="block_content">
		
		<h2>Itens Incompletos</h2>
	
		<form action="" method="post">
		
			<table cellpadding="0" cellspacing="0" width="100%" class="sortable">
			
				<thead>
					<tr>
					    <th>Placa</th>
					    <th>Nome Carro</th>
					    <th>Titulo</th>
					    <th>Quantidade</th>
					    <th>Preço Unitário</th>
					    <th>Complemento</th>
						<th>Preço Total</th>
						<th>Data</th>
					    <th></th>
						<th></th>
					    <th></th>
					    <th></th>
					</tr>
				</thead>
				
				<tbody>
					<% @incomplete_stocks.each do |stock| %>
					  <tr>
					    <td><%= stock.license_plate %></td>
					    <td><%= stock.license_name %></td>
					    <td><%= stock.name %></td>
					    <td><%= stock.qtd %></td>
					    <td>R$ <%= stock.price_unit %></td>
					    <td><%= stock.complement %></td>
						<td>R$ <%= stock.price_unit * stock.qtd %></td>
					    <td><%= I18n.l stock.date %></td>
						<td><%= link_to 'Finalizar', complete_stock_path(stock) %></td>
					    <td><%= link_to 'Visualizar', stock %></td>
					    <td><%= link_to 'Editar', edit_stock_path(stock) %></td>
					    <td><%= link_to 'Excluir', stock, :confirm => 'Tem certeza que deseja excluir?', :method => :delete %></td>
					  </tr>
					<% end %>
				</tbody>
				
			</table>
						
		</form>
		
	</div>		<!-- .block_content ends -->
	
	<div class="block_content">
	
		<h2>Itens Completos</h2>
		
		<form action="" method="post">
		
			<table cellpadding="0" cellspacing="0" width="100%" class="sortable">
			
				<thead>
					<tr>
					    <th>Placa</th>
					    <th>Nome Carro</th>
					    <th>Titulo</th>
					    <th>Quantidade</th>
					    <th>Preço Unitário</th>
					    <th>Complemento</th>
						<th>Preço Total</th>
						<th>Data</th>
					    <th></th>
					    <th></th>
					    <th></th>
					</tr>
				</thead>
				
				<tbody>
					<% @complete_stocks.each do |stock| %>
					  <tr>
					    <td><%= stock.license_plate %></td>
					    <td><%= stock.license_name %></td>
					    <td><%= stock.name %></td>
					    <td><%= stock.qtd %></td>
					    <td>R$ <%= stock.price_unit %></td>
					    <td><%= stock.complement %></td>
						<td>R$ <%= stock.price_unit * stock.qtd %></td>
						<td><%= I18n.l stock.date %></td>
					    <td><%= link_to 'Visualizar', stock %></td>
					    <td><%= link_to 'Editar', edit_stock_path(stock) %></td>
					    <td><%= link_to 'Excluir', stock, :confirm => 'Tem certeza que deseja excluir?', :method => :delete %></td>
					  </tr>
					<% end %>
				</tbody>
				
			</table>
						
		</form>
		
	</div>		<!-- .block_content ends -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div>		<!-- .block ends -->